<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context = ".Math"
    android:background="#554E4E">

    <TextView
        android:id="@+id/firstNumber1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@id/secondNumber1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="12pt"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/secondNumber1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@id/result1"
        app:layout_constraintStart_toEndOf="@id/firstNumber1"
        app:layout_constraintTop_toTopOf="@id/firstNumber1"
        android:gravity="center"
        android:textSize="12pt"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/result1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/secondNumber1"
        app:layout_constraintTop_toTopOf="@id/secondNumber1"
        android:gravity="center"
        android:textSize="12pt"
        android:textColor="@color/white"
        />

    <TableLayout
        android:id="@+id/buttonTable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondNumber1">

    <TableRow android:layout_weight="1">

        <android.widget.Button
            android:id="@+id/seven1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="7" />

        <android.widget.Button
            android:id="@+id/eight1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="8" />

        <android.widget.Button
            android:layout_width="0dp"
            android:id="@+id/nine1"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="9" />

        <android.widget.Button
            android:id="@+id/equals1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="=" />
    </TableRow>

    <TableRow android:layout_weight="1">

        <android.widget.Button
            android:id="@+id/four1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="4" />

        <android.widget.Button
            android:id="@+id/five1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="5" />

        <android.widget.Button
            android:id="@+id/six1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="6" />

        <android.widget.Button
            android:id="@+id/sqrt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="âˆš" />
    </TableRow>

    <TableRow android:layout_weight="1">

        <android.widget.Button
            android:id="@+id/one1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="1" />

        <android.widget.Button
            android:id="@+id/two1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="2" />

        <android.widget.Button
            android:id="@+id/three1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="3" />

        <android.widget.Button
            android:id="@+id/pow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="^" />
    </TableRow>

    <TableRow android:layout_weight="1">

        <android.widget.Button
            android:id="@+id/clear1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="C" />

        <android.widget.Button
            android:id="@+id/zero1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="0" />

        <android.widget.Button
            android:id="@+id/sin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="sin" />

        <android.widget.Button
            android:id="@+id/cos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_style"
            android:backgroundTintMode="add"
            android:text="cos" />
    </TableRow>
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transfer"
            android:background="@drawable/button_style"
            android:text="..."
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:onClick="Click"
            />
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>